<% layout('layouts/boilerplate')%>
    <header class="head">
        <div class="mx-auto" align="center">
           <h2>Welcome to VJTI Mess Portal!</h2> 
        </div>
    </header>
    <div class="box-form">
        <div class="col-6 offset-3">
        <form action="/admin/login" method="POST" novalidate class="validated-form">
            <div class="right">
                <h3>Admin Login</h3>
                    <div  class=mb-3>
                        <label class="form-label" for="email">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="Enter your e-mail ID" name="admin[email]" required>
                        <div class="valid-feedback">
                        Looks good!
                        </div>
                    </div>
                <div  class=mb-3>
                    <label class="form-label" for="password">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Enter your password" name="admin[password]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <a class="btn btn-success" href="/admin/adminpage">Login</a>
                </div>
            </div>
        </form>
        </div>
    </div>

</html>